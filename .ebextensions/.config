    content: |
      #!/usr/bin/env bash
      echo "Setting ACL permissions for /storage..."
      setfacl -Rdm u:root:rwx,u:webapp:rwx /var/app/current/storage
      setfacl -Rm u:root:rwx,u:webapp:rwx /var/app/current/storage